<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="App.TextAppearance.ToolbarTitle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/whiteText</item>
        <item name="android:textSize">@dimen/sp18</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="App.TextAppearance.Button" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/whiteText</item>
        <item name="android:textSize">@dimen/sp18</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/bg_violet_round_all</item>
    </style>

    <style name="App.TextAppearance.Header" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/darkText</item>
        <item name="android:textSize">@dimen/sp18</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="App.TextAppearance.Description" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/darkText</item>
        <item name="android:textSize">@dimen/sp14</item>
    </style>

</resources>
